<?xml version="1.0" encoding="UTF-8"?>
<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="example" source="src/" workdir="build/api/xml/">
        <collector backend="parser">
            <include mask="*.php" />
            <exclude mask="*autoload.php" />
        </collector>

        <generator output=".">
            <enrich base="build/">
                <!-- @base - (Base-)Directory of datafiles used for enrich process -->

                <!--<source type="...">-->
                <!-- @type - the handler for the enrichment -->
                <!--         known types by default are: build, checkstyle, git, phpcs, phploc, phpunit, pmd -->

                <!-- every enrichment source can have additional configuration nodes, most probably need a logfile -->
                <!-- <file name="path/to/log.xml" /> -->
                <!--</source> -->

                <source type="build">
                </source>

                <!-- git vcs information -->
                <!--
                <source type="git">
                    <git binary="/usr/bin/git" />
                    <history enabled="true" limit="15" cache="${phpDox.project.workdir}/gitlog.xml" />
                </source>
                -->
                <source type="git">
                    <git binary="/usr/bin/git" />
                    <history enabled="true" limit="15" cache="build/api/xml/gitlog.xml" />
                </source>

                <!-- add phploc output -->
                <!--
                <source type="phploc" />
                -->
                <source type="phploc">
                    <file name="logs/phploc.xml" />
                </source>


                <!-- PHP Code Sniffer findings -->
                <!--
                <source type="phpcs">
                    <file name="logs/phpcs.xml" />
                </source>
                -->
                <source type="checkstyle">
                    <file name="logs/checkstyle.xml" />
                </source>

                <!-- PHPMessDetector -->
                <!--
                <source type="pmd">
                    <file name="pmd.xml" />
                </source>
                -->
                <source type="pmd">
                    <file name="logs/pmd.xml" />
                </source>

                <!-- PHPUnit Coverage XML -->
                <!-- <source type="phpunit">  -->
                <!-- <coverage path="" /> -->
                <!--           @path - the directory where the xml code coverage report can be found -->
                <!--</source>-->
                <!--
                <source type="phpunit">
                    <filter directory="${phpDox.project.source}" />
                </source>
                -->
                <source type="phpunit">
                    <file directory="coverage/" />
                </source>

            </enrich>
            <build engine="html" enabled="true" output="build/api/html/">
                <file extension="html" />
            </build>
        </generator>
    </project>
</phpdox>
